---
interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
  canonical?: string;
}

const { 
  title, 
  description = "Discover books through authentic mentions from writers, thinkers, and creators you trust. Follow the trails of recommendations from podcasters, writers, and thought leaders.",
  image = "/og-image.png",
  type = "website",
  canonical
} = Astro.props;

const siteUrl = "https://booktrails.rabbitholes.garden";
const fullUrl = canonical ? `${siteUrl}${canonical}` : `${siteUrl}${Astro.url.pathname}`;

import '../styles/global.css';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="keywords" content="book recommendations, book mentions, reading lists, podcasts, book reviews, literary discussions, book discovery" />
    <meta name="author" content="BookTrails" />
    <link rel="canonical" href={fullUrl} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${image}`} />
    <meta property="og:url" content={fullUrl} />
    <meta property="og:site_name" content="BookTrails" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}${image}`} />
    <meta name="twitter:site" content="@booktrails" />
    <meta name="twitter:creator" content="@booktrails" />
    
    <!-- Favicon and Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    
    <!-- PWA Meta Tags -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#ff7b54" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="BookTrails" />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="BookTrails - Book Recommendations" href="/rss.xml" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Google Analytics -->
    <!-- TODO: Replace GA_MEASUREMENT_ID with your actual Google Analytics Measurement ID -->
    <!-- 
    <script async src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'GA_MEASUREMENT_ID');
    </script>
    -->
    <script is:inline>
      // Initialize dark mode immediately to prevent flash
      (function() {
        const savedTheme = localStorage.getItem('theme');
        const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        
        if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="bg-white text-stone-900 dark:bg-black dark:text-stone-100 transition-colors duration-200">
    <div class="min-h-screen flex flex-col">
      <header class="border-b border-stone-200 dark:border-stone-800 bg-white/80 dark:bg-stone-900/80 backdrop-blur-sm sticky top-0 z-10">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 py-4 sm:py-6">
          <div class="flex justify-between items-center">
            <a href="/" class="text-xl sm:text-2xl font-light tracking-tight text-stone-900 dark:text-stone-100">
              BookTrails<span class="text-orange-500 -ml-1">.</span>
            </a>
            
            <!-- Desktop Navigation -->
            <nav class="hidden md:flex items-center space-x-6">
              <a href="/search" class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors text-sm font-medium">
                Search
              </a>
              <a href="/archive" class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors text-sm font-medium">
                Archive
              </a>
              <a href="/books" class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors text-sm font-medium">
                Books
              </a>
              <a href="/authors" class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors text-sm font-medium">
                Authors
              </a>
              <div class="flex items-center space-x-2">
                <a href="/rss.xml" class="text-stone-600 dark:text-stone-400 hover:text-orange-500 dark:hover:text-orange-400 transition-colors text-sm font-medium" aria-label="RSS Feed">
                  RSS
                </a>
                <button 
                  id="theme-toggle"
                  class="p-2 text-stone-600 dark:text-stone-400 hover:text-orange-500 dark:hover:text-orange-400 rounded-lg"
                  aria-label="Toggle theme"
                >
                  <span class="hidden dark:inline">‚òÄÔ∏è</span>
                  <span class="dark:hidden">üåô</span>
                </button>
              </div>
            </nav>

            <!-- Mobile Navigation -->
            <div class="md:hidden flex items-center space-x-2">
              <button 
                id="theme-toggle-mobile"
                class="p-2 text-stone-600 dark:text-stone-400 hover:text-orange-500 dark:hover:text-orange-400 rounded-lg"
                aria-label="Toggle theme"
              >
                <span class="hidden dark:inline">‚òÄÔ∏è</span>
                <span class="dark:hidden">üåô</span>
              </button>
              <button 
                id="mobile-menu-button"
                class="p-2 text-stone-600 dark:text-stone-400 hover:text-orange-500 dark:hover:text-orange-400 rounded-lg"
                aria-label="Menu"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
              </button>
            </div>
          </div>
          
          <!-- Mobile Menu -->
          <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-stone-200 dark:border-stone-700">
            <nav class="flex flex-col space-y-4 pt-4">
              <a href="/search" class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors text-sm font-medium">
                Search
              </a>
              <a href="/archive" class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors text-sm font-medium">
                Archive
              </a>
              <a href="/books" class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors text-sm font-medium">
                Books
              </a>
              <a href="/authors" class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors text-sm font-medium">
                Authors
              </a>
              <a href="/about" class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors text-sm font-medium">
                About
              </a>
              <a href="/rss.xml" class="text-stone-600 dark:text-stone-400 hover:text-orange-500 dark:hover:text-orange-400 transition-colors text-sm font-medium">
                RSS Feed
              </a>
            </nav>
          </div>
        </div>
      </header>
      
      <main class="flex-1">
        <slot />
      </main>
      
      <footer class="border-t border-stone-200 dark:border-stone-800 bg-white dark:bg-stone-900">
        <div class="max-w-4xl mx-auto px-6 py-12">
          <div class="text-center">
            <p class="text-stone-600 dark:text-stone-400 text-sm">
              Curating book mentions from thoughtful voices across the web.
            </p>
            <div class="mt-4 flex justify-center space-x-6">
              <a href="/archive" class="text-xs text-stone-500 dark:text-stone-500 hover:text-orange-500 dark:hover:text-orange-400 transition-colors">
                Browse Archive
              </a>
              <a href="/about" class="text-xs text-stone-500 dark:text-stone-500 hover:text-orange-500 dark:hover:text-orange-400 transition-colors">
                About This Project
              </a>
              <a href="mailto:hello@mentioned.com" class="text-xs text-stone-500 dark:text-stone-500 hover:text-orange-500 dark:hover:text-orange-400 transition-colors">
                Suggest a Mention
              </a>
            </div>
          </div>
        </div>
      </footer>
    </div>
    
    <script>
      // Theme toggle functionality
      const themeToggle = document.getElementById('theme-toggle');
      const themeToggleMobile = document.getElementById('theme-toggle-mobile');
      const html = document.documentElement;
      
      function toggleTheme() {
        html.classList.toggle('dark');
        localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
      }
      
      themeToggle?.addEventListener('click', toggleTheme);
      themeToggleMobile?.addEventListener('click', toggleTheme);
      
      // Mobile menu functionality
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
      
      // Close mobile menu when clicking outside
      document.addEventListener('click', (e) => {
        if (!mobileMenuButton?.contains(e.target) && !mobileMenu?.contains(e.target)) {
          mobileMenu?.classList.add('hidden');
        }
      });
      
      // Register service worker for PWA
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then(registration => console.log('ServiceWorker registered:', registration.scope))
            .catch(error => console.log('ServiceWorker registration failed:', error));
        });
      }
    </script>
  </body>
</html>